<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8"/>
        <title>{% block title %}Site de poker online{% endblock %}</title>
        <link href="{{ asset('bundles/pokergeneral/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/pokergeneral/css/video-js.css') }}" rel="stylesheet">
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/pokergeneral/font-awesome/css/font-awesome.css') }}"/>

        <!-- Page-Level Plugin CSS - Tables -->
        <link href="{{ asset('bundles/pokergeneral/css/plugins/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet">

        <!-- SB Admin CSS - Include with every page -->
        <link href="{{ asset('bundles/pokergeneral/css/sb-admin.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/pokergeneral/css/jquery-ui-1.8.16.custom.css') }}" rel="stylesheet">

        <script src="{{ asset('bundles/pokergeneral/js/jquery-1.10.2.js') }}"></script>
        <script src="{{ asset('bundles/pokergeneral/js/timer.js') }}"></script>
        <style>
            .floatable {
                position: fixed;
                top: 10px; 
            }
        </style>
    </head>

    <body>

        <div id="wrapper">

            <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('fo_homepage') }}">Poker online</a>
                </div>
                <!-- /.navbar-header -->

                <ul class="nav navbar-top-links navbar-right">

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li><a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                            </li>
                            <li><a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                            </li>
                            <li class="divider"></li>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <li><a href="{{ path('logout') }}"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        {% else %}
                            <li><a href="{{ path('fo_login') }}"><i class="fa fa-sign-in fa-fw"></i> Login</a>
                        {% endif %}                       
                            </li>
                        </ul>
                        <!-- /.dropdown-user -->
                    </li>
                    <!-- /.dropdown -->
                </ul>
                <!-- /.navbar-top-links -->

            </nav>
            <!-- /.navbar-static-top -->

            <div class="container">
            {% block content %}
                {% block fos_user_content %}{% endblock %}
            {% endblock %}
            </div>
            <!-- /#page-wrapper -->

        </div>
        <!-- /#wrapper -->
        <script>
            var positionElementInPage = $("nav.navbar-static-side").offset().top;
            $(window).scroll(
                    function() {
                        if ($(window).scrollTop() >= positionElementInPage) {
                            // fixed
                            $("nav.navbar-static-side").addClass("floatable");
                            $("nav.navbar-static-top").addClass("floatable");
                            if($(window).width() >= 752){
                                $('nav.navbar-static-side').css('width', '100%');
                            }else{
                                $('nav.navbar-static-side').css('width', '250px');
                            }
                        } else {
                            // relative
                            $("nav.navbar-static-side").removeClass("floatable");
                            $("nav.navbar-static-top").removeClass("floatable");
                        }
                    }
            );
        </script>
        <!-- Core Scripts - Include with every page -->

        <script src="{{ asset('bundles/pokergeneral/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('bundles/pokergeneral/js/plugins/metisMenu/jquery.metisMenu.js') }}"></script>

        <!-- Page-Level Plugin Scripts - Tables -->
        <script src="{{ asset('bundles/pokergeneral/js/plugins/dataTables/jquery.dataTables.js') }}"></script>
        <script src="{{ asset('bundles/pokergeneral/js/plugins/dataTables/dataTables.bootstrap.js') }}"></script>

        <!-- SB Admin Scripts - Include with every page -->
        <script src="{{ asset('bundles/pokergeneral/js/sb-admin.js') }}"></script>

        <!-- Page-Level Demo Scripts - Tables - Use for reference -->
        <script>
            $(document).ready(function() {
                $('#dataTables-example').dataTable();
            });
        </script>

    </body>

</html>