extends layout
block content
	link(rel='stylesheet', href='/stylesheets/chat.css')
	<script type="text/javascript" src="/javascripts/chat.js"></script>
	<script type="text/javascript" src="/socket.io/socket.io.js"></script>
	<script type="text/javascript" src="/javascripts/functions.js"></script>
	<script type="text/javascript" src="/javascripts/socket.js"></script>
	<script type="text/javascript" src="/javascripts/actions.js"></script>
	br
	<div style="display:none" class="alert alert-warning alert-dismissible navbar-fixed-top text-center" role="alert">
	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<p id="alertContent"><strong>Warning!</strong> Better check yourself, you're not looking too good.</p>
	</div>
	div.col-xs-12.col-md-12
		div.col-xs-9.col-md-9
			#container.col
				br
				div#login.panel.panel-default
					div.panel-body.text-center(style="font-size:18px;")
						p Bienvenu sur conqueror, un petit jeux de construction réalisé en nodeJs.
						p#connectMessage Merci de vous connectez pour jouer.
				br
			div#game.panel.panel-default(style="display:none")
				div.panel-body
					#buildingList.col
			div.container
				span(id="showBuildingsList", class="btn btn-warning" style="left: 50px;position: fixed;bottom: 0px;display:none;") Constructions
				div#buildingsList(style="display:none")
		div.col-xs-3.col-md-3
			div.panel.panel-default
				div.panel-heading Informations
				div.panel-body
					p Développement des sections informations
			div.panel.panel-default
				div.panel-heading Statistiques
				div.panel-body
					p#nbPlayerOnline
			div.panel.panel-default
				div.panel-heading Top 10
				div.panel-body
					ul.list-group
						li.list-group-item.list-group ...
			div(class="chat-window" id="chat_window_1" style="display:none")
					div
						div.panel.panel-default
							div.panel-heading.top-bar
								h3.panel-title.col-md-6.col-xs-6 <span class="glyphicon glyphicon-comment"></span> Chat
								div.col-md-6.col-xs-6(style="text-align: right")
									<a href="#"><span id="minim_chat_window" class="glyphicon glyphicon-minus icon_minim"></span></a>
									<a href="#"><span class="glyphicon glyphicon-remove icon_close" data-id="chat_window_1"></span></a>
							div.panel-body.msg_container_base
							div.panel-footer
								div.input-group
									<input id="btn-input" type="text" class="form-control input-sm chat_input" placeholder="Write your message here..." />
									<span class="input-group-btn">
									<button class="btn btn-primary btn-sm" id="btn-chat">Send</button>
									</span>
