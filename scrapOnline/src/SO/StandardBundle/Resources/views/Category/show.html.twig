{% extends 'SOBackBundle::layout.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
{% endblock %}

{% block content %}
<div class="content">
    <div class="grid_8">
        <div class="block_border">
            <div class="block_design">
                <div class="block_header"><h1>{{ category.name }}</h1></div>
                <div class="block_content no_padding">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td style="text-align:left; font-weight:bold;">Nom</td>
                                <td class="center">{{ category.name }}</td>
                            </tr>
                            <tr>
                            <td style="text-align:left; font-weight:bold;">Parent</td>
                            <td class="center">
                                    {% if category.parent %}
                                        {{ category.parent.name }}
                                    {% else %}
                                        Main Category
                                    {% endif %}
                            </td>
                            </tr>
                            <tr>
                                <td style="text-align:left; font-weight:bold;">Secteur ca</td>
                                <td class="center">{{ category.sectorTurnover }} ( {{ category.sectorTurnoverYear}} )</td>
                            </tr>

                        </tbody>
                     </table>
                     
                    </div>
                </div>
            </div>
        </div>
        <div class="grid_4">
            <div class="block_border">
                <div class="block_design sidebar">
                    <div class="block_header"><h1>Actions</h1></div>
                    <div class="block_content no_padding">

                        <ul class="list no_margin">
                            <li><a href="">Send To responsible editor</a> </li>
                            <li><a href="">Send To editor</a> </li>
                            <li><a href="{{ path('category_backend_edit',{'id':category.id}) }}">Edit</a> </li>
                            <li><a href="{{ path('category_backend_delete',{'id':category.id}) }}" onclick="return confirm('Are you sure?');">Supprimer</a>  </li>
                            {% if category.approbation==1 and category.published==1 %}
                            <li><a href="{{ path('category_backend_status',{'id':  category.id,'type':'unpublish'}) }}">Non Publi&eacute;</a></li>
                            {% else %}
                            <li><a href="{{ path('category_backend_status',{'id':  category.id,'type':'publish'}) }}">Enregistrer et publier</a> </li>
                            {% endif %}
                            <li><a href="{{ path('category_back_index') }}">All Categories</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}