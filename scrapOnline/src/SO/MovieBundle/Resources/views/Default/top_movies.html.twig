<div class="widget widget-news">
    <h2 class="widget-title"><span class="icon-list pull-left"></span> Top films</h2>
    <div class="widget-content">
        <ul class="list-unstyled">
            {% for movie in movies %}
            <li>
                <div class="item clearfix">
                    <a href="#" class="pull-left"><img style="with:50px;height:50px;" src="{{ movie.poster }}" alt=""></a>
                    <div class="item-right">
                        <h4><a href="#">{{ movie.title }}</a></h4>
                        <ul class="list-inline kp-metadata clearfix">
                            <li class="kp-time">10 Sep 2013</li>
                            <li class="kp-view"><span class="icon-eye pull-left"></span>50 View</li>
                        </ul>
                    </div>
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>
    <!-- widget content -->
</div>