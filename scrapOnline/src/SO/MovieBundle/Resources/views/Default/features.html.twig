<div class="widget top-slide">
    <div class="list_carousel">
        <ul class="carousel-2">
            {% for movie in movies %}
            <li>
                <div class="item">
                    <a href="#">
                        <img style="with:250px;height:210px;" src="{{ movie.poster }}" alt="">
                        <div class="mask">
                            <span class="icon-link"></span>
                        </div>
                    </a>
                    <div class="item-content">
                        <header class="header-item">
                            <span class="icon-images pull-left"></span>
                            <div class="item-right">
                                <h4><a href="#">{{ movie.title }}</a></h4>
                                <ul class="list-inline kp-metadata clearfix">
                                    <li class="kp-author"><span class="icon-chat pull-left"></span><a href="#">By Join</a></li>
                                    <li class="kp-view"><span class="icon-calendar pull-left"></span>10 Sep 2013</li>
                                </ul>
                            </div>
                        </header>
                        <p>
                            {{ movie.synopsis|truncate(150) }}
                        </p>
                    </div>
                </div>
                <!-- item -->
            </li>
            {% endfor %}
        </ul>
        <a id="prev2" class="prev icon-arrow-left" href="#"></a>
        <a id="next2" class="next icon-arrow-right" href="#"></a>
    </div>
</div>