<div id="create_folder" style="display: none">
    <form>
        <div class="form-group">
            <input name="parent_id" type="hidden" />
            <input name="folder_name" class="form-control" type="text" placeholder="Nom du dossier"/>  
        </div>
        <button id="send_folder" type="submit" class="btn btn-default">Créer</button>
    </form>
</div>
<div id="add_file" style="display: none">
    <form>
        <div class="form-group">
            <span class="btn btn-success fileinput-button">
                <i class="glyphicon glyphicon-plus"></i>
                <span>Ajouter un fichier (zip accepté)</span>
                <!-- The file input field used as target for the file upload widget -->
                <input name="uploadingFile" type="file" />
                <!--<input id="fileupload" name="files[]" multiple>-->
            </span>
        </div>
        <button id="send_file" type="submit" class="btn btn-default">Envoyer</button>
    </form>
</div>
<div id="move_file" style="display: none">
    <form>
        <div class="form-group">
          <select onChange="onChangeFolder(this.options[this.selectedIndex].value)" id="folderSelect" class="form-control">
          </select>
        </div>
        <div class="form-group">
            <button onClick="changePath()" type="button" class="btn btn-primary">Déplacer</button>
        </div>
    </form>
</div>
<div id="prevu_file">
        <div class="popover" role="tooltip">
            <h3 class="popover-title">Prevu</h3>
            <div class="popover-content"></div>
        </div>
</div>
<div id="config_file" style="display: none">
    <form id="formConfig" role="form">
        <div class="form-group btn-group">
            <button id="access-on" type="button" class="btn btn-default">
                Public
            </button>
            <button id="access-off" type="button" class="btn btn-default active">
                Privé
            </button>
        </div> 
        <input type="hidden" value="0" name="access" />
        <input name="folder_id" type="hidden" />
        <div class="form-group input-group">
            <input placeholder="Email à inviter" name="prevEmail" type="text" class="form-control">
            <span class="input-group-btn">
                <button class="btn btn-default add-email" type="button">
                    <span class="glyphicon glyphicon-plus"></span>
                </button>
            </span>
        </div>   
        <div id="inputs_emails">
        </div>
    </form>
</div>