<div class="grid_12">
<div class="border_table">
<table class="table-backend">
    <thead>
    <tr>
        <th>Nom</th>
        <th>Description</th>
        <th>Template</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for element in elements %}
    <tr>
        <td class="center _20">
            <a href="{{ path ('bo_mailer_show' , {'id':  element.id  }) }}">{{ element.name }}</a>
        </td>
        <td class="center _40"> {{ element.description }} </td>
        
        <td class="center _20"> {{ element.template }} </td>

                     
        <td class="center _20">
            <a href="{{ path ('bo_mailer_edit' , {'id':  element.id  }) }}">Modifier</a>
            &nbsp;&nbsp;&nbsp;<a href="{{ path('bo_mailer_delete',{'id':  element.id}) }}" onclick="return confirm('Are you sure?');">Supprimer</a>
          
        </td>

    </tr>
    {% endfor %}
    </tbody>
</table>

 </div>
</div>
