{% extends 'FPGeneralBundle:Back:layout.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
{% endblock %}

{% block content %}
<div class="content">
    <div class="grid_8">
        <div class="block_border">
            <div class="block_design">
                <div class="block_header"><h1>Show Mailer Category</h1></div>
                <div class="block_content no_padding">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td style="text-align:left; font-weight:bold;">Nom</td>
                                <td class="center">{{ element.name }}</td>
                            </tr> 
                            
                            <tr>
                                <td style="text-align:left; font-weight:bold;"> Parent Name</td>
                                <td class="center"> 
                                    {% if element.parent %}
                                         {{ element.parent.name }}
                                    {% else %}
                                         Main Category
                                    {% endif %}
                                       
                                </td>
                            </tr>    
                        </tbody>
                     </table>
                     			
                    </div>
                </div>
            </div>
        </div>
        <div class="grid_4">
            <div class="block_border">
                <div class="block_design sidebar">
                    <div class="block_header"><h1>Actions</h1></div>
                    <div class="block_content no_padding">
                        <ul class="list no_margin">                            
                            <li><a href="{{ path('bo_mailer_category_edit',{'id':element.id}) }}">Modifier</a> </li>
                            <li><a href="{{ path('bo_mailer_category_delete',{'id':element.id}) }}" onclick="return confirm('Are you sure?');">Supprimer</a>  </li>
                            <li><a href="{{ path('bo_mailer_categories') }}">All Mailer Categories</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}