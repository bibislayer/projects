                    </table>
                </div>
                <div class="block_header"> <h1>Gestionnaires : </h1></div>
                <div class="block_content">
                    <table cellspacing="5" cellpadding="5" width="100%" style="text-align:left;">
                        {% if collaborator is defined %}
                            {% for result in collaborator %}
                                <tr>    
                                    <th><p>{{ (result.User.UserProfile.firstname~' '~result.User.UserProfile.lastname)|capitalize }}</p></th>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        {% if app.user.roles is defined and ('ROLE_SUPER_ADMIN' in app.user.roles or 'ROLE_SALES_MANAGER' in app.user.roles) %}
                            <tr>    
                                <th><p><a href="{{ path('bo_note_new',{'slug_ent':maker.slug,'is_main':1}) }}">Add Note</a></p></th>
                            </tr>
                        {% endif %} 
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
