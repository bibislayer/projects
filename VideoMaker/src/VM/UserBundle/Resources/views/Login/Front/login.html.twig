{% extends "VMGeneralBundle::Front/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
<div>{{ error|trans }}</div>
{% endif %}
<div class="container">
    <div class="grid_6">
        <div class="block_border">
            <div class="block_design height_250">
                <div class="block_header"><h1>Connectez-vous</h1></div>
                <div class="block_content">

                    <form action="{{ path("login_check") }}" method="post" class="form_main">
                        <div class="input-main">
                            <div class="input-block">
                                <div class="grid _70 left login">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                                    <div class="label"><label for="username">{{ 'security.login.username'|trans }}</label></div>
                                    <div class="field"><input type="text" class="_90"  id="username" name="_username" value="{{ last_username }}" required="required" /></div>

                                    <div class="label"><label for="password">{{ 'security.login.password'|trans }}</label> </div>
                                    <div class="field"><input type="password"  id="password" name="_password" required="required" /></div>
                                    <div class="stop"></div>

                                    <label class="left" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                                    <input type="checkbox"  id="remember_me" name="_remember_me" value="on" />
                                    <div class="line stop">
                                        <a href="{{ path('fos_user_resetting_request') }}">mot de passe oubli√©e ?</a>
                                    </div>
                                </div>
                                <div class="grid _30 left connexion_pro">
                                    <input class="btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

                                </div>
                            </div>
                        </div>
                    </form>

                </div>
                <div class="stop"></div>
                <div class="block_footer"></div>
            </div>   
        </div>
    </div>
    <div class="stop"></div>
</div>
{% endblock fos_user_content %}
