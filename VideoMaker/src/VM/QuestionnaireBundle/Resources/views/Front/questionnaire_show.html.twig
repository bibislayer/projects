{% extends 'VMGeneralBundle:Questionnaire:layout.html.twig' %}
{% block stylesheets %}
{{ parent() }}
{% endblock %}
{% block content %}
    <div class="grid_12">
        <div class="border-main">
            <div class="block-border_1">
                <div class="block_design">
                    <div class="block_header"><h1>{% trans with {'%name%': questionnaire.name} from 'front' %}questionnaire.title.general{% endtrans %}</h1></div>
                    <div class="block_content blocpres">
                        <div class="right show">
                            {% if questionnaire.Enterprise.logo %}
                                <img src="{{ asset(questionnaire.Enterprise.logo) }}" alt="logo_entreprise" />
                            {% endif %}
                        </div>

                            <p class="eighteenpx"> <span class="bold">Entreprise : </span><span >{{questionnaire.Enterprise.name}}</span></p>
                            {% if questionnaire.Enterprise.urlSite %}
                                <p> <span class="bold">Site web : </span><span ><a href="{{questionnaire.Enterprise.urlSite}}" target="_blank">{{questionnaire.Enterprise.urlSite}}</a></span></p>
                            {% endif %}
                            <div class="textMCE">
                               {{questionnaire.textIntroduction | raw}}
                            </div>
                            <div class="textMCE">
                                {{questionnaire.textPresentation | raw}}
                            </div>
                            <a  class="btn_principal text_center" style="margin-left: 40% !important;" href="{{ path('fo_questionnaire_process', {'slug_quest': app.request.get('slug_quest')}) }}">{% trans with {'%name%': questionnaire.name} from 'front' %}questionnaire.actionButton.start{% endtrans %}</a>

                         <div class="stop"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="stop"></div>
{% endblock %}