<table class="table-border">
    <thead>
    <tr>
        <th style="text-align:left; font-weight:bold;">#Id</th>
        <th style="text-align:left; font-weight:bold;">Text</th>
        <th style="text-align:left; font-weight:bold;">Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for element in elements %}
    <tr class="gradeX">
        <td>{{ element.id }}</td>
        <td class="center">
            <a href="{{ path ('bo_help_show' , {'id':  element.id  }) }}">{{ element.text }}</a>
        </td>

        <td class="center">
            <a href="{{ path ('bo_help_show' , {'id':  element.id  }) }}">Voir</a>&nbsp;&nbsp;&nbsp;
            <a href="{{ path ('bo_help_edit' , {'id':  element.id  }) }}">Modifier</a>&nbsp;&nbsp;&nbsp;
            <a href="{{ path('bo_help_delete',{'id':  element.id}) }}" onclick="return confirm('Are you sure?');">Supprimer</a>
        </td>

    </tr>
    {% endfor %}
    </tbody>
</table>