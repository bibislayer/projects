{% extends "VMGeneralBundle::Front/layout.html.twig" %}

{% block fos_user_content %}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Connectez-vous</h3>
                </div>
                <div class="panel-body">
                    <form action="{{ path("session_login", {'slug_sess' : app.request.get('slug_sess')}) }}"  method="post" role="form">
                        <fieldset>
                            <div class="form-group">
                                {{ form_row(form.email) }}
                            </div>
                            
                            {{ form_row(form._token) }}
                            <input class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit" value="Connexion" />
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock fos_user_content %}