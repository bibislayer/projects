{% extends 'VMGeneralBundle:Front:layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header edit" data-type="name">{{ recordingSession.name }}</h1> 
                <div id="successAlert" style="display:none" class="alert alert-success">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <span></span>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">  
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Introduction
                    </div>
                    <div class="panel-body info">
                        <div class="pull-right">
                            <video id="example_video" class="video-js vjs-default-skin" controls preload="none" width="360" height="240"
                                   poster=""
                                   data-setup="{}">
                                <source src="/uploads/video.flv" type='video/flv' />
                            </video>
                        </div>
                        <div class="media-body" data-type="introduction">
                            {{ recordingSession.textIntroduction|raw }}
                        </div>
                    </div>
                </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Ce que vous voulez dire ( oui oui vous le voulez ! )
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body edit" data-type="presentation">
                        {{ recordingSession.textPresentation|raw }}
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-6 -->
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Les mots à utiliser
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        {% for word in recordingSession.recordingSessionKeywordList %}
                            <button type="button" class="btn btn-outline btn-primary btn-xs">{{ word.name }}</button>  
                        {% endfor %}
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Enregistrement vidéo</div>
                    <div class="panel-body"> 
                        {% include 'VMRecordingSessionBundle:Default:webcam.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if app.request.attributes.get('_route') == 'mo_recording_session_show' %}
    {% endif %}
{% endblock %}
